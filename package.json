{
  "name": "hardhat-ts-plugin-boilerplate",
  "version": "0.0.1",
  "description": "Hardhat TypeScript plugin boilerplate",
  "repository": "github:nomiclabs/hardhat-ts-plugin-boilerplate",
  "author": "Nomic Labs LLC",
  "license": "MIT",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "keywords": [
    "ethereum",
    "smart-contracts",
    "hardhat",
    "hardhat-plugin"
  ],
  "scripts": {
    "format": "prettier --write 'src/**/*.{js,ts}' 'test/**/*.{js,ts}' README.md",
    "test": "mocha --exit --recursive 'test/**/*.test.ts'",
    "build": "tsc",
    "watch": "tsc -w",
    "prepublishOnly": "npm run build"
  },
  "files": [
    "dist/src/",
    "src/",
    "LICENSE",
    "README.md"
  ],
  "devDependencies": {
    "@types/chai": "^4.3.11",
    "@types/debug": "^4.1.12",
    "@types/mocha": "^5.2.6",
    "@types/node": "^16.0.0",
    "chai": "^4.3.10",
    "hardhat": "^2.19.0",
    "mocha": "^10.2.0",
    "prettier": "3.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  },
  "peerDependencies": {
    "hardhat": "^2.19.0"
  },
  "dependencies": {
    "debug": "^4.3.4"
  }
}
